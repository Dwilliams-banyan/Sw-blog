<article id="<%= post.layout %>-<%= post.slug %>" class="article article-type-<%= post.layout %>" itemscope
  itemprop="blogPost">
  <%if(page.title=='about me' || page.title=='hobbies' || page.title=='skills' || page.title=='education' ||
    page.title=='cover letter' || page.title=='resume' ){%>
    <%if(post.noDate !="true" ){%>
      <div class="article-meta">
        <%- partial('post/date', {class_name: 'article-date' , date_format: null}) %>
      </div>
      <%}%>
        <div class="article-inner">
          <% if (theme.fancybox){ %>
            <input type="hidden" class="isFancy" />
            <% } %>
              <% if (post.link || post.title){ %>
                <header class="article-header">
                  <%- partial('post/title', {class_name: 'article-title' }) %>
                </header>
                <!-- HEADER/NAVBAR -->
                <!-- TODO: Changes the inline stylessheet to external stylesheet  -->
                <div style="text-align: center; background-color: rgba(51, 162, 170); color: rgb(0, 0, 0);">
                  <ul>
                    <% site.pages.forEach(function(page) { %>
                      <li style="display: inline; opacity: 1; margin-right: 2em;">
                        <% if (page.title == 'about me'){ %>
                          <a href="http://localhost:4000/about-me" target="_blank" style="color: black;">
                            <%- page.title %>
                          </a>
                          <% } else if (page.title == 'cover letter'){ %>
                            <a href="http://localhost:4000/cover-letter" target="_blank" style="color: black;">
                              <%- page.title %>
                            </a>
                            <% } else { %>
                        <a href="http://localhost:4000/<%- page.title %>" target="_blank" style="color: black;">
                          <%- page.title %>
                        </a>
                        <% } %>
                      </li>
                      <% })%>
                  </ul>
                </div>
          </div>

                <% } %>
                <% } %>
          <!-- TODO: clean code, serperate each page to different files instead of all on this file. -->
      <div style="margin-bottom: 5em;">
        <% site.posts.forEach(function(post) { %>
          <%if(page.title=='cover letter' && post.title=='cover letter' || page.title=='resume' &&
          post.title=='resume' || page.title=='education' && post.title=='education' ||
          page.title=='skills' && post.title=='skills' || page.title=='hobbies' &&
          post.title=='hobbies' || page.title=='about me' && post.title=='about me' ){%>
            <h1 style="text-align: center; text-transform: uppercase; color:antiquewhite"><%- post.title %></h1>
            <% } %>
            <% })%>
        </div>
      <% if (page.title == 'about me'){ %>
        <div style="background-color: rgb(0,0,0, .4)">
          <h2 style="margin-bottom: 10px; margin-left: 10px; text-indent: 50px; color: white; line-height: 1.6">
            <%- site.data.myData.aboutMe01 %>
          </h2>
          <h2 style="margin-left: 10px; margin-bottom: 10px; text-indent: 50px; color: white; line-height: 1.6">
            <%- site.data.myData.aboutMe02 %>
          </h2>
          <h2 style="margin-left: 10px; color: white; text-indent: 50px; line-height: 1.6">
            <%- site.data.myData.aboutMe03 %>
          </h2>
        </div>
        <% } %>

        <% if (page.title == 'resume'){ %>
          <div style="color: white; display: flex;">
            <!-- LEFT SIDE RESUME -->
            <div style="width: 20%; background-color: rgba(34, 30, 68, 0.6); display: inline-block;">
              <h2 style="text-align: center; background-color: rgba(34, 30, 68, 0.8);"> Contact</h2>

              <h4 style="margin-left: 10px;">Address:</h4>
              <p style="margin-left: 10px;"> <%- site.data.resumeData.address %></p>

              <h4 style="margin-left: 10px; margin-top: 15px;">Phone:</h4>
              <p style="margin-left: 10px;"> <%- site.data.resumeData.phone %></p>

              <h4 style="margin-left: 10px; margin-top: 15px;">Email:</h4>
              <p style="margin-left: 10px;"> <%- site.data.resumeData.email %></p>

              <h2 style="margin-top: 20px; text-align: center; background-color: rgba(34, 30, 68, 0.8);"> Technical Profile</h2>
              <ul style="margin-left: 20px;">
                <li style="list-style-type: circle; margin-top: 10px"><%- site.data.resumeData.techProfile1 %></li>
                <li style="list-style-type: circle; margin-top: 10px"><%- site.data.resumeData.techProfile2 %></li>
                <li style="list-style-type: circle; margin-top: 10px"><%- site.data.resumeData.techProfile3 %></li>
              </ul>

              <h2 style="margin-top: 20px; text-align: center; background-color: rgba(34, 30, 68, 0.8);"> Competencies</h2>
              <h4 style="margin-left: 10px; margin-top: 15px;"><%- site.data.resumeData.competencies1 %></h4>
              <h4 style="margin-left: 10px; margin-top: 15px;"><%- site.data.resumeData.competencies2 %></h4>
            </div>
            <!-- RIGHT SIDE RESUME -->
            <div style="width: 80%; background-color: rgba(0, 0, 0, 0.6); display: inline-block;">
              <h2 style="margin-top: 10px; margin-left: 5%; color:aqua; "> Summary</h2>
              <hr>
              <p style="margin-left: 10px; text-indent: 50px; line-height: 1.6"><%- site.data.resumeData.summary %></p>

              <hr>
              <h2 style="margin-top: 10px; margin-left: 5%; color:aqua; "> Work History</h2>
              <hr>
              <h2 style="margin-left: 10px; margin-top: 10px;"><%- site.data.resumeData.jobDate1 %></h2>
              <h2 style="margin-left: 10px; margin-top: 10px;"><%- site.data.resumeData.jobRole1 %></h2>
              <h3 style="margin-left: 10px; margin-top: 10px;"><%- site.data.resumeData.job1 %></h3>
              <ul style="margin-left: 20px;">
                <li style="list-style-type: circle; margin-top: 10px"><%- site.data.resumeData.oneJobSkill1 %></li>
                <li style="list-style-type: circle; margin-top: 10px"><%- site.data.resumeData.oneJobSkill2 %></li>
                <li style="list-style-type: circle; margin-top: 10px"><%- site.data.resumeData.oneJobSkill3 %></li>
                <li style="list-style-type: circle; margin-top: 10px"><%- site.data.resumeData.oneJobSkill4 %></li>
                <li style="list-style-type: circle; margin-top: 10px"><%- site.data.resumeData.oneJobSkill5 %></li>
                <li style="list-style-type: circle; margin-top: 10px"><%- site.data.resumeData.oneJobSkill6 %></li>
                <li style="list-style-type: circle; margin-top: 10px"><%- site.data.resumeData.oneJobSkill7 %></li>
              </ul>

              <h2 style="margin-left: 10px; margin-top: 20px;"><%- site.data.resumeData.jobDate2 %></h2>
              <h2 style="margin-left: 10px; margin-top: 10px;"><%- site.data.resumeData.jobRole2 %></h2>
              <h3 style="margin-left: 10px; margin-top: 10px;"><%- site.data.resumeData.job2 %></h3>
              <ul style="margin-left: 20px;">
                <li style="list-style-type: circle; margin-top: 10px"><%- site.data.resumeData.twoJobSkill1 %></li>
                <li style="list-style-type: circle; margin-top: 10px"><%- site.data.resumeData.twoJobSkill2 %></li>
              </ul>

              <hr>
              <h2 style="margin-top: 10px; margin-left: 5%; color:aqua; "> Education</h2>
              <hr>
              <h2 style="margin-left: 10px; margin-top: 10px;"><%- site.data.resumeData.educationDate1 %></h2>
              <h2 style="margin-left: 10px; margin-top: 10px;"><%- site.data.resumeData.educationCert1 %></h2>

              <h2 style="margin-left: 10px; margin-top: 20px;"><%- site.data.resumeData.educationDate2 %></h2>
              <h2 style="margin-left: 10px; margin-top: 10px;"><%- site.data.resumeData.educationCert2 %></h2>

              <h2 style="margin-left: 10px; margin-top: 20px;"><%- site.data.resumeData.educationDate3 %></h2>
              <h2 style="margin-bottom: 30px; margin-left: 10px; margin-top: 10px;"><%- site.data.resumeData.educationCert3 %></h2>
            </div>
          </div>

          <% } %>

        <% if (page.title == 'cover letter'){ %>
          <div style="width: 75em; padding-left: 15em;">
            <div style="padding-left: 3em; height: 12.5em; color: white; background-color: rgba(51, 162, 170, 0.7);">
              <h2 style="padding-top: 1.5em; margin-bottom: 1em; font-size: 40px;"><%- site.data.coverLetterData.fullName %></h2>
              <h4 style="margin-bottom: 1em;">Address: <%- site.data.coverLetterData.address %></h4>
              <h4>Email: <%- site.data.coverLetterData.email %></h4>
            </div>
            
            <div style="padding-left: 3em; background-color: rgba(255, 255, 255, 0.8);">
              <h4 style="padding-top: .5em; margin-bottom: 10px; margin-left: 10px; text-indent: 50px; line-height: 2.5"><%- site.data.coverLetterData.paragraph1 %></h4>    
              <h4 style="margin-bottom: 10px; margin-left: 10px; text-indent: 50px; line-height: 2.5"><%- site.data.coverLetterData.paragraph2 %></h4>    
              <h4 style="margin-bottom: 10px; margin-left: 10px; text-indent: 50px; line-height: 2.5"><%- site.data.coverLetterData.paragraph3 %></h4>    
              <h4 style="margin-bottom: 10px; margin-left: 10px; text-indent: 50px; line-height: 2.5"><%- site.data.coverLetterData.finalContent %></h4>    
              <h4 style="margin-bottom: 10px; margin-left: 10px; text-indent: 50px; line-height: 2.5"><%- site.data.coverLetterData.yoursTruly %></h4>
              <h4 style="margin-left: 10px; text-indent: 50px; line-height: 2.5"><%- site.data.coverLetterData.fullName %></h4>
            </div>
          </div>
          <% } %>

        <% if (page.title == 'skills'){ %>
          <div style="padding-left: 3em; color: white; background-color: rgba(51, 162, 170, 0.7);">
            <ol style="padding-top: .5em; padding-bottom: .5em;">
              <li style="margin-top: .5em; margin-bottom: .5em;">
                <h2><%- site.data.skills.skill1 %></h2>
              </li>
              <h3 style="color: black; margin-top: 1em;">JavaScript</h3>
              <hr>
              <ul style="margin-left: 20px;">
                <li style="list-style-type: circle; margin-top: 10px"><%- site.data.skills.javaScriptSkill1 %></li>
                <li style="list-style-type: circle; margin-top: 10px"><%- site.data.skills.javaScriptSkill2 %></li>
                <li style="list-style-type: circle; margin-top: 10px"><%- site.data.skills.javaScriptSkill3 %></li>
                <li style="list-style-type: circle; margin-top: 10px"><%- site.data.skills.javaScriptSkill4 %></li>
                <li style="list-style-type: circle; margin-top: 10px"><%- site.data.skills.javaScriptSkill5 %></li>
              </ul>
              <h3 style="color: black; margin-top: 1em;">Python</h3>
              <hr>
              <ul style="margin-left: 20px;">
                <li style="list-style-type: circle; margin-top: 10px"><%- site.data.skills.pythonSkill1 %></li>
                <li style="list-style-type: circle; margin-top: 10px"><%- site.data.skills.pythonSkill2 %></li>
                <li style="list-style-type: circle; margin-top: 10px"><%- site.data.skills.pythonSkill3 %></li>
                <li style="list-style-type: circle; margin-top: 10px"><%- site.data.skills.pythonSkill4 %></li>
              </ul>
              <li style="margin-top: 1em; margin-bottom: .5em;">
                <h2><%- site.data.skills.skill2 %></h2>
              </li>
              <li style="margin-top: .5em; margin-bottom: .5em;">
                <h2><%- site.data.skills.skill3 %></h2>
              </li>
              <li style="margin-top: .5em; margin-bottom: .5em;">
                <h2><%- site.data.skills.skill4 %></h2>
              </li>
              <h3 style="color: black; margin-top: 1em;">OOP</h3>
              <hr>
              <ul style="margin-left: 20px;">
                <li style="list-style-type: circle; margin-top: 10px"><%- site.data.skills.objectObjectPro1 %></li>
                <li style="list-style-type: circle; margin-top: 10px"><%- site.data.skills.objectObjectPro2 %></li>
                <li style="list-style-type: circle; margin-top: 10px"><%- site.data.skills.objectObjectPro3 %></li>
                <li style="list-style-type: circle; margin-top: 10px"><%- site.data.skills.objectObjectPro4 %></li>
              </ul>
              <li style="margin-top: .5em; margin-bottom: .5em;">
                <h2><%- site.data.skills.skill5 %></h2>
              </li>
            </ol>
          </div>

          <% } %>
        
        <% if (page.title == 'hobbies'){ %>

          <div style="line-height: 2.5; padding-left: 3em; color: white; background-color: rgba(51, 162, 170, 0.7);">
            <h2 style="padding-top: .5em; margin-top: .5em; margin-bottom: .5em;">Programming - <%- site.data.hobbies.programming %></h2>
            <h2 style="margin-top: .5em; margin-bottom: .5em;">Reading - <%- site.data.hobbies.reading %></h2>
            <h2 style="margin-top: .5em; margin-bottom: .5em;">Video Gaming - <%- site.data.hobbies.videoGaming %></h2>
            <h2 style="margin-top: .5em; margin-bottom: .5em;">Eating - <%- site.data.hobbies.food %></h2>
            <h2 style="margin-top: .5em; margin-bottom: .5em;">Singing - <%- site.data.hobbies.singing %></h2>
            <h2 style="margin-top: .5em; margin-bottom: .5em;">Making Friends - <%- site.data.hobbies.friend %></h2>
            <h2 style="padding-bottom: .5em; margin-top: .5em; margin-bottom: .5em;">Swimming - <%- site.data.hobbies.swimming %></h2>
          </div>

          <% } %>

        <% if (page.title == 'education'){ %>
            <div style="color: white; background-color: rgba(0, 0, 0, 0.6); padding-left: 3em;">
              <h2 style="padding-top: .5em; margin-top: .5em; margin-bottom: .5em;"><%- site.data.education.educationDate1 %> - <%- site.data.education.educationCert1 %></h2>
              <h2 style="margin-top: 5em; margin-bottom: .5em;"><%- site.data.education.educationDate2 %> - <%- site.data.education.educationCert2 %></h2>
              <h2 style="margin-top: 5em; margin-bottom: .5em;"><%- site.data.education.educationDate3 %> - <%- site.data.education.educationCert3 %></h2>
              <h2 style="padding-bottom: .5em; margin-top: 5em; margin-bottom: .5em;"><%- site.data.education.educationDate4 %> - <%- site.data.education.educationCert4 %></h2>
            </div>
          <% } %>
